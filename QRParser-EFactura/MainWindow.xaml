<Window x:Class="QRParser_EFactura.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:QRParser_EFactura.Controls"
        mc:Ignorable="d"
        Title="QRParser - EFactura" Height="550" Width="716">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Margin="20,20,0,20" TextWrapping="Wrap" Text="" Name="InputBox"/>
            <Button Grid.Column="1" Content="Parse" Margin="20,20,20,0" VerticalAlignment="Top" Click="Button_Click" Height="40"/>
        </Grid>

        <Grid Grid.Row="1" Margin="10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="1">
                <userControls:ParsedCodeElement x:Name="QRElement0" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement1" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement2" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement3" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement4" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement5" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement6" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement7" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement8" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement9" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement10" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement11" Visibility="Hidden" Margin="10 0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <userControls:ParsedCodeElement x:Name="QRElement12" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement13" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement14" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement15" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement16" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement17" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement18" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement19" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement20" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement21" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement22" Visibility="Hidden" Margin="10 0"/>
                <userControls:ParsedCodeElement x:Name="QRElement23" Visibility="Hidden" Margin="10 0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
